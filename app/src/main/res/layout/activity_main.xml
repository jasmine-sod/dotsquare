<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    tools:context="com.jasminesodhi.tableapp.MainActivity">

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/animation"
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:text="@string/button_text_1"
        android:textAllCaps="false"
        android:textSize="16sp"
        fancy:fb_textColor="#FFF"
        fancy:fb_defaultColor="@color/colorPrimary"
        fancy:fb_radius="50dp"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/play_game"
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/animation"
        android:layout_marginTop="5dp"
        android:text="@string/button_text_2"
        android:textAllCaps="false"
        android:textSize="16sp"
        fancy:fb_textColor="#FFF"
        fancy:fb_defaultColor="@color/colorPrimary"
        fancy:fb_radius="50dp"/>

</RelativeLayout>
